/**
 * Product additional attributes template
 *
 * @var $block \Magento\Catalog\Block\Product\View\Attributes
 */
?>
<?php
    $_helper = $this->helper(Magento\Catalog\Helper\Output::class);
    $_product = $block->getProduct();
?>
<?php if ($_additional = $block->getAdditionalData()) :?>
    <?php foreach ($_additional as $_data) :?>
        <?php if ($_helper->productAttribute($_product, $_data['value'], $_data['code']) == "Pre Order" ) :?>
               
            <span class="label preorder-text"><?= $_helper->productAttribute($_product, $_data['value'], $_data['code']) ?></span>
        <?php endif;?>

        <?php if ($_helper->productAttribute($_product, $_data['value'], $_data['code']) == "Sale" ) :?>
               
               <span class="label sale-text"><?= $_helper->productAttribute($_product, $_data['value'], $_data['code']) ?></span>
           <?php endif;?>
    <?php endforeach; ?>
<?php endif;?>
